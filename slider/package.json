{
  "name": "react-template-ts",
  "scripts": {
    "build": "webpack --config webpack.config.prod.js",
    "clean": "babel-node ./tasks/clean.js",
    "publish": "babel-node ./tasks/publish.js",
    "start": "webpack-dev-server --config webpack.config.js",
    "test": "jest --coverage",
    "test:watch": "yarn test -- --watchAll"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ]
  },
  "dependencies": {
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-toolbox": "^2.0.0-beta.12"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/react": "^16.0.34",
    "@types/react-dom": "^16.0.3",
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.26.4",
    "fs-extra": "^4.0.1",
    "jest": "^20.0.4",
    "postcss-cssnext": "^2.11.0",
    "postcss-each": "^0.9.3",
    "postcss-extend": "^1.0.5",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "postcss-mixins": "^5.4.1",
    "rest-optimize-webpack-plugin": "^1.0.1",
    "style-loader": "^0.13.2",
    "ts-loader": "^3.1.1",
    "typescript": "^2.6.2",
    "webpack": "^2.6.1",
    "webpack-cli": "^2.0.14",
    "webpack-core": "^0.6.9",
    "webpack-dev-server": "^2.9.1"
  }
}

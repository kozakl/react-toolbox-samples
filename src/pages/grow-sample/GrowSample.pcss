.grow {
  display: flex;
  font-size: 1.75rem;
  text-align: center;
  height: 30rem;
  
  & > div::before {
    content: '';
    display: inline-block;
    vertical-align: middle;
    height: 100%;
  }
}

.element1 {
  flex-grow: 1;
  background: red;
}

.element2 {
  flex-grow: 3;
  background: green;
}

.element3 {
  flex-grow: 1;
  background: darkorange;
}

.element4 {
  flex-grow: 1;
  background: blue;
}
